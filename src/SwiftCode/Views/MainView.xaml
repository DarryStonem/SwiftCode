<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    BackgroundColor="#ddc477"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SwiftCode.Views.MainView">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center">
            <Label TextColor="White" FontSize="22" HorizontalOptions="Center" HorizontalTextAlignment="Center" Text="{Binding Quote}">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding ClipboardCommand}"/>
                </Label.GestureRecognizers>
            </Label>
            <Button Visual="Material" Command="{Binding GetNewQuoteCommand}" Text="Next one, please!"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>